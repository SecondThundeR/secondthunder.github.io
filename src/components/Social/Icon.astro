---
import { Image } from "astro:assets";

import CodeStatsIcon from "@assets/icons/CodeStats.svg";
import DiscordIcon from "@assets/icons/Discord.svg";
import GithubIcon from "@assets/icons/Github.svg";
import InstagramIcon from "@assets/icons/Instagram.svg";
import LastFMIcon from "@assets/icons/LastFM.svg";
import TelegramIcon from "@assets/icons/Telegram.svg";
import TwitterIcon from "@assets/icons/Twitter.svg";
import VKIcon from "@assets/icons/VK.svg";

export interface Props {
    name: string;
    alt: string;
}

const iconsPaths: Record<string, ImageMetadata> = {
    VK: VKIcon,
    Telegram: TelegramIcon,
    Instagram: InstagramIcon,
    Twitter: TwitterIcon,
    Discord: DiscordIcon,
    "Last.fm": LastFMIcon,
    Github: GithubIcon,
    "Code::Stats": CodeStatsIcon,
};

const { name, alt } = Astro.props;

const iconPath = iconsPaths[name];
---

<Image
    src={iconPath}
    alt={alt}
    class="inline-block w-32 h-32 landscape:w-32 landscape:h-32 sm:w-[164px] sm:h-[164px] bg-cover"
/>
