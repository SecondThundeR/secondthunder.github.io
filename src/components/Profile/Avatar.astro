---
import { Image } from "astro:assets";

export interface Props {
    avatar: ImageMetadata;
}

const { avatar } = Astro.props;
---

<Image
    src={avatar}
    alt="Avatar Image"
    class="inline-block m-0 p-0 w-[224px] h-[224px] border-14 border-accent-light dark:border-accent-dark rounded-full"
/>
