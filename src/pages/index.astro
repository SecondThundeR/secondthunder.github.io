---
import "@styles/base.css";

import AvatarImage from "@assets/images/avatar.jpeg";

import FooterBlock from "@components/Footer/Block.astro";
import ProfileBlock from "@components/Profile/Block.astro";
import SocialBlock from "@components/Social/Block.astro";

import Layout from "@layouts/Main.astro";
---

<Layout title="Project Aether">
    <ProfileBlock
        name="SecondThundeR"
        description="Welcome to my page!"
        avatar={AvatarImage}
    />
    <SocialBlock
        name="VK"
        description="First social network where I signed up"
        link="https://vk.com/secondthunder"
    />
    <SocialBlock
        name="Telegram"
        description="Messenger where I spend most of my time"
        link="tg://resolve?domain=secondthunder"
    />
    <SocialBlock
        name="Instagram"
        description="Favorite place to share photos"
        link="https://instagram.com/AwayFromGalaxy"
    />
    <SocialBlock
        name="Twitter"
        description="Lurking mostly, so I don't find myself very often there"
        link="https://twitter.com/scndthndr"
    />
    <SocialBlock
        name="Discord"
        description="Place where I mostly online"
        link="https://discord.com/users/156081219866591232"
    />
    <SocialBlock
        name="Last.fm"
        description="Platform where I show all my taste in the music world"
        link="https://last.fm/user/AwayFromGalaxy"
    />
    <SocialBlock
        name="Github"
        description="Hosting my hobby repositories here"
        link="https://github.com/SecondThundeR"
    />
    <SocialBlock
        name="Code::Stats"
        description="Place where I share my coding activity"
        link="https://codestats.net/users/AwayFromGalaxy"
    />
    <FooterBlock />
</Layout>
