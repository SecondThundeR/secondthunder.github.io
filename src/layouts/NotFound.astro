---
export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="viewport"
            content="width=device-width, initial-scale=1.0, viewport-fit=cover"
        />
        <meta name="description" content="Not Found Page" />
        <link rel="canonical" href="https://secondthunder.github.io/404" />
        <link
            rel="apple-touch-icon"
            sizes="180x180"
            href="favicons/404/light/apple-touch-icon.png"
            media="(prefers-color-scheme: light)"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="32x32"
            href="favicons/404/light/favicon-32x32.png"
            media="(prefers-color-scheme: light)"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="16x16"
            href="favicons/404/light/favicon-16x16.png"
            media="(prefers-color-scheme: light)"
        />
        <link
            rel="manifest"
            href="favicons/404/light/site.webmanifest"
            media="(prefers-color-scheme: light)"
        />
        <link
            rel="mask-icon"
            href="favicons/404/light/safari-pinned-tab.svg"
            color="#b91d47"
            media="(prefers-color-scheme: light)"
        />
        <link
            rel="shortcut icon"
            href="favicons/404/light/favicon.ico"
            media="(prefers-color-scheme: light)"
        />

        <link
            rel="apple-touch-icon"
            sizes="180x180"
            href="favicons/404/dark/apple-touch-icon.png"
            media="(prefers-color-scheme: dark)"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="32x32"
            href="favicons/404/dark/favicon-32x32.png"
            media="(prefers-color-scheme: dark)"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="16x16"
            href="favicons/404/dark/favicon-16x16.png"
            media="(prefers-color-scheme: dark)"
        />
        <link
            rel="manifest"
            href="favicons/404/dark/site.webmanifest"
            media="(prefers-color-scheme: dark)"
        />
        <link
            rel="mask-icon"
            href="favicons/404/dark/safari-pinned-tab.svg"
            color="#b91d47"
            media="(prefers-color-scheme: dark)"
        />
        <link
            rel="shortcut icon"
            href="favicons/404/dark/favicon.ico"
            media="(prefers-color-scheme: dark)"
        />

        <meta name="apple-mobile-web-app-title" content="Project Aether" />
        <meta name="application-name" content="Project Aether" />
        <title>{title}</title>
    </head>
    <body>
        <main class="h-screen w-screen text-center">
            <slot />
        </main>
    </body>
</html>
